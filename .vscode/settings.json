{
    "yaml.format.singleQuote": true,
    "javascript.format.semicolons": "remove",
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[handlebars]": {
        "editor.formatOnSave": false
    },
    "files.associations": {
        "**/*.hbs": "handlebars"
    }
}