{
    "name": "@techor/read-workspace-packages",
    "scripts": {
        "build:cjs": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=cjs --minify --sourcemap --platform=node --external:esbuild --external:fast-glob --external:@techor/query-workspaces --external:@techor/extend --external:@techor/fs --external:upath",
        "build:type": "tsc --emitDeclarationOnly --preserveWatchOutput",
        "build": "npm run build:cjs && npm run build:type",
        "dev": "conc 'npm:build:* -- --watch'",
        "test": "jest",
        "type-check": "tsc --noEmit",
        "lint": "eslint src"
    },
    "license": "MIT",
    "description": "Read workspace package.json contents",
    "author": {
        "name": "Aron",
        "email": "i@aron.tw",
        "url": "http://aron.tw"
    },
    "homepage": "https://aron.tw",
    "bugs": {
        "url": "https://github.com/1aron/utils/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/1aron/utils.git",
        "directory": "packages/read-workspace-packages"
    },
    "keywords": [
        "package",
        "json",
        "packagejson",
        "workspaces",
        "utils",
        "monorepo",
        "npm",
        "pnpm",
        "yarn"
    ],
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "dependencies": {
        "fast-glob": "^3.2.12",
        "@techor/query-workspaces": "",
        "@techor/fs": "",
        "upath": "^2.0.1"
    }
}